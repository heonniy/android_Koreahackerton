        tools:context=".fragment.MainMenuMypageFragment">

        <TextView
            android:id="@+id/address6"
            android:layout_width="207dp"
            android:layout_height="19dp"

            android:layout_marginTop="30dp"
            android:fontFamily="@font/anilight"
