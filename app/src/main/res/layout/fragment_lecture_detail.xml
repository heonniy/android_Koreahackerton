            android:layout_marginEnd="15dp"

            android:background="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/rec_1"
            app:layout_constraintStart_toStartOf="@+id/rec_1"
            app:layout_constraintTop_toTopOf="@+id/rec_1" />

