            android:fontFamily="@font/aninormal"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:text="수강료 : "

            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="@+id/rec_1"
            app:layout_constraintTop_toBottomOf="@+id/three_1"
            tools:ignore="TouchTargetSizeCheck" />


        <ImageView
            android:id="@+id/imageView25"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="50dp"

            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/imageView27"
            app:layout_constraintStart_toStartOf="@+id/imageView27"
            app:layout_constraintTop_toTopOf="@+id/imageView27"
