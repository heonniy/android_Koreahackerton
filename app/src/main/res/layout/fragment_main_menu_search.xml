    </androidx.constraintlayout.widget.ConstraintLayout>





    <!-- RecyclerView 영역 (높이를 정함) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="220dp"/>

    <!-- 원하는 높이 값을 지정하세요 -->

</LinearLayout>
