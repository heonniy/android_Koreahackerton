<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".survey_3">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="165dp"
        android:layout_height="133dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/survey3_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/purpose_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:fontFamily="@font/gmarketsansttfmedium"
        android:text="강좌이용 목적선택"
        android:textSize="27sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.224"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/main_strock"
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/main_strock"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/purpose_title"
        app:layout_constraintVertical_bias="0.352" />


    <ImageButton
        android:id="@+id/purpose1"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="28dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@color/white"
        android:scaleType="centerInside"
        android:src="@drawable/purpose1"
        app:layout_constraintStart_toStartOf="@+id/main_strock"
        app:layout_constraintTop_toTopOf="@+id/main_strock"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/purpose2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="100dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@color/white"
        android:scaleType="centerCrop"
        android:src="@drawable/purpose2"
        app:layout_constraintStart_toStartOf="@+id/main_strock"
        app:layout_constraintTop_toTopOf="@+id/main_strock"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/purpose3"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="180dp"
        android:backgroundTint="@color/white"
        android:scaleType="centerInside"
        android:src="@drawable/purpose3"
        app:layout_constraintStart_toStartOf="@+id/main_strock"
        app:layout_constraintTop_toTopOf="@+id/main_strock"
        tools:ignore="SpeakableTextPresentCheck"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:id="@+id/purpose4"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="260dp"
        android:backgroundTint="@color/white"
        android:scaleType="centerInside"
        android:src="@drawable/purpose4"
        app:layout_constraintStart_toStartOf="@+id/main_strock"
        app:layout_constraintTop_toTopOf="@+id/main_strock"
        tools:ignore="SpeakableTextPresentCheck"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:id="@+id/purpose5"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="336dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@color/white"
        android:scaleType="centerInside"
        android:src="@drawable/purpose5"
        app:layout_constraintStart_toStartOf="@+id/main_strock"
        app:layout_constraintTop_toTopOf="@+id/main_strock"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/purpose6"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="408dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@color/white"
        android:scaleType="centerInside"
        android:src="@drawable/purpose6"
        app:layout_constraintStart_toStartOf="@+id/main_strock"
        app:layout_constraintTop_toTopOf="@+id/main_strock"
        tools:ignore="SpeakableTextPresentCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>